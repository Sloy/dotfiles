[core]
	excludefile = ~/.gitignore
	excludesfile = ~/.gitignore_global
	editor = nano
	precomposeunicode = true
	autocrlf = input
	ignorecase = false
[color]
	ui = true

[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  graph = log --graph --pretty=oneline --abbrev-commit
  amend = commit --amend --no-edit
  fire = "!f() { git reset --hard; git clean -f -d; }; f"
  bclean = "!git branch --merged | grep -v \"*\" | grep -v master | grep -v develop | grep -v sonar | xargs -n 1 git branch -d"
  roomba = "!f() { git bclean ; git fetch --prune}; f"
  nuke = !sh -c 'git branch -D $1 && git push origin :$1' -
  wip = commit -a -m "WIP"
  unwip = reset --soft HEAD^

[push]
	default = simple
